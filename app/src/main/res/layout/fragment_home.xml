<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".ui.home.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to our applications" />

            <Button
                android:id="@+id/button_manage_appointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Appointments" />

            <Button
                android:id="@+id/button_book_appointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Appointment" />

            <Button
                android:id="@+id/button_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FAQ" />

            <Button
                android:id="@+id/button_donor_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donor Card" />

            <Button
                android:id="@+id/button_donor_card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donor Card" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
